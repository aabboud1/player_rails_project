<h1> Index </h1>

<% if !@sportsplayers.empty? %>
    <% @sportsplayers.each do |player| %>
        <p><%= link_to player.name, sportsplayer_path(player) %></p>
    <% end %>
<% else %>
    <p> No players found </p>
<% end %>
    
    
<p><%= button_to "Create new player", new_sportsplayer_path, method: "get" %></p>
<br>
<p><%= button_to "Delete all players", delete_all_path, method: "get", data: {confirm: "Are you sure you want to delete all the players?!"} %></p>